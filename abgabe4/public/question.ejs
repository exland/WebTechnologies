<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width = device-width, initial-scale = 1">
  <title>Web Technology</title>
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
  <script src="js/jquery-3.6.0.min.js"></script>
  <script  type="text/javascript" src="js/bootstrap.min.js"></script>
  <link rel="stylesheet" type="text/css" href="/css/index.css">
  <link rel="stylesheet" type="text/css" href="/css/footer.css">
  <meta name="viewport" content="width=desice-width, initial-scale=1">
  <script src="/js/question.js" defer></script>

</head>

  <body>
    <div id="main">
      <nav class="navbar fixed-top navbar-expand-sm bg-dark">

        <ul class="navbar-nav ">
          
          <li class="nav-item">
            <a class="nav-link" id="homepage" href="/index">Homepage</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="newQuestion" href="/new">Ask</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="newAnswer" class="newAnswer" href = "/answer" >Answer</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="loginBtn" href="/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="registerBtn" href="/register">Register</a>
          </li>
          
          <li class="nav-item">
            <button type="button" id="logoutBtn" class="btnLogout">Logout</button>
          </li>
          
          
    
        </ul>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <input type="text" class="form-control form-control-lg" id="Userquery" placeholder="Search a question...">
          </li>
        </ul>
      </nav>

      <div id="viewport">
        <!-- Sidebar -->
        <div id="sidebar">
          <header>
            <a href="#">Similar Questions</a>
          </header>
          <ul class="navbar-nav" id="sidebarnavbar">
            <% similarQuestions.forEach(function(simQuestion) { %>
            <li class="nav-item">
              <div class="card text-black card-has-bg click-col" href="" id="card6">
                <div class="card-body pl-2 ml-0" id="card6body">
                  <h4 class="card-title pl-0 ml-0 "><a class="text7" id="title1" href="<%= simQuestion.id%>"">
                    <%=simQuestion.Title%>
                  </a></h4>
                </div>
              </div>
              
            </li>
            <% }); %>
          </ul>
        </div>
        <!-- Content -->
      </div>
      <div class="padsidebar">
        <div class="card-container" id="card-container">
          <div class="card text-black card-has-bg click-col" href="" id="card1">
            <div  class="card-header" >
              <i>User: <%=question.OwnerUserId%></i>
              <i class="idTransfer" id="score<%=qid%>" >Upvotes: <%=question.Score%></i>
              <button class="upvoteBtn2" id="<%=qid%>"  onclick="changeBtnColorQuestion(this.id)" style="width: 20px; outline: none; box-shadow: none; border: none;"/>
            </div>
            <div class="card-body">
              <h4 class="card-title mt-0  "><a class="text" id="title1" herf="">
                  <%=title%>
                </a></h4>
              <p>
                <%-questiontitle%>
              </p>
            </div>
            <div class="card-footer">
              <div class="media">
                <div class="media-body">
                  <h6 class="my-0 text-red d-block" id="author1"><%=question.CreationDate%></h6>
                </div>
              </div>
            </div>
          </div>
        </div>
  
        <div class="card-container" id="card-container">
          <% answers.forEach(function(answer) { %>
            <div class="card text-black card-has-bg click-col" style="background-color: #F0EBCC" id=card2>
              <div class="card-header">
                <i>User: <%=answer.OwnerUserId%></i>
                <i id="score<%=answer.id%>">Upvotes: <%=answer.Score%></i>
                <button class="upvoteBtn"id="<%=answer.id%>" onclick="changeBtnColor(this.id)" style="width: 20px; outline: none; box-shadow: none; border: none;"/>
              </div>
              <div class="card-body">
                <small><i class="far fa-clock" id="time1"></i></small>
                <p>
                  <%-answer.Body%>
                </p>
              </div>
              <div class="card-footer">
                <div class="media">
                  <div class="media-body">
                    <h6 class="my-0 text-red d-block" id="author1"> <%=answer.CreationDate%></h6>
                  </div>
                </div>
              </div>
            </div>
            <% }); %>
        </div>
        
  
  
  
  
      <div class="container dialogs">
        <dialog id="errorDialog">
          <p id="dialogTxt"></p>
          <form method="dialog">
            <button class="dialogBtn">Close</button>
          </form>
        </dialog>
      </div>
      </div>
      </div>
      
    <footer id="page-footer blue pt-4 footer">
      <div class="panel panel-default footer" id="footer-panel">
        <div id="about-text">
          <a class="something" style="font-style: italic; color: rgb(0, 0, 0);" id="loginMsg"></a>
          <a href="/about.html"> About</a>
        </div>
      </div>
  </footer>
  </body>
  <html>